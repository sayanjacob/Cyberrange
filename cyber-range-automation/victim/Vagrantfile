Vagrant.configure("2") do |config|
  config.vm.define "victim" do |victim|
    victim.vm.box = "generic/ubuntu2204"
    victim.vm.hostname = "victim"

    # Static private IP for local LAN access
    victim.vm.network "private_network", ip: "192.168.56.12"
    
    # Port forwarding for GUI (noVNC, VNC, SSH)
    victim.vm.network "forwarded_port", guest: 6080, host: 6081  # changed host port to avoid conflicts
    victim.vm.network "forwarded_port", guest: 5901, host: 5901
    victim.vm.network "forwarded_port", guest: 22, host: 2222

    # Provisioning
    victim.vm.provision "shell", path: "provision.sh"

    victim.vm.provider "virtualbox" do |vb|
      vb.gui = false
      vb.memory = 2048
      vb.cpus = 2
    end
  end
end
