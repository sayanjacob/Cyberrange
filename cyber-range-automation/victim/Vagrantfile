Vagrant.configure("2") do |config|
  config.vm.box = "generic/ubuntu2204"
  config.vm.hostname = "victim"

  # Static private IP for local LAN access
  config.vm.network "private_network", ip: "192.168.1.6"

  # Port forwarding for GUI access (noVNC)
  config.vm.network "forwarded_port", guest: 6080, host: 6080
  config.vm.network "forwarded_port", guest: 5901, host: 5901
  config.vm.network "forwarded_port", guest: 22, host: 2222

  # Use external shell script for provisioning
  config.vm.provision "shell", path: "provision.sh"

  config.vm.provider "virtualbox" do |vb|
    vb.gui = false
    vb.memory = 2048
    vb.cpus = 2
  end
end
