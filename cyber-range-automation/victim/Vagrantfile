Vagrant.configure("2") do |config|
  config.vm.define "victim" do |victim|
    victim.vm.box = "gusztavvargadr/windows-10"
    victim.vm.hostname = "victim"

    # Private network for host access
    victim.vm.network "private_network", ip: "192.168.56.12"

    # Forward RDP
    victim.vm.network "forwarded_port", guest: 3389, host: 3389

    # Use WinRM for provisioning (optional)
    victim.vm.communicator = "winrm"
    victim.vm.network "forwarded_port", guest: 5985, host: 55985

    victim.vm.provider "virtualbox" do |vb|
      vb.gui = true  # Required to see and interact with Windows login
      vb.memory = 4096
      vb.cpus = 2
    end
  end
end
